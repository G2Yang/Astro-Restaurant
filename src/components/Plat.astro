---

let {dades} = Astro.props;

---

<style>
    div {
        background-color: beige;
        padding: 20px;
        border: 1px solir red;
    }
</style>
<div>
    <h1>{dades.Nombre}</h1>
    { dades.Imagen && <img style="height: 300px; width: auto;" src={dades.Imagen} alt={dades.Imagen} /> }
    
</div>

